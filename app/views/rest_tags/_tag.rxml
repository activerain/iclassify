xml = xml_instance
xml.tag(:link => rest_tag_url(:id => tag_unique_field)) do
  xml.id(tag[:id])
  xml.name(tag[:name])
  xml.nodes do
    tag[:nodes].each do |node|
      xml.node(:link => rest_node_url(:id => node[:id])) do
        xml.id(node[:id])
        xml.uuid(node[:uuid])
        xml.description(node[:description])
      end
    end
  end
end
