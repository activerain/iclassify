if @unclassified_nodes.length > 0 
  page.replace_html(
    "bulk_tag", 
    :partial => "unclassified_nodes", 
    :locals => { :unclassified_nodes => @unclassified_nodes, :tags => @tags }
  )
  page[:bulk_tags_notice].visual_effect(:highlight, :startcolor => "#88ff88", :endcolor => "#FFFFFF")
else
  page.replace_html("bulk_tag", 'No Unclassified Nodes')
  page[:bulk_tag].visual_effect(:highlight, :startcolor => "#88ff88", :endcolor => "#FFFFFF")
end
